{% extends 'base.html.twig' %}

{% set i = 0 %}

{% block title %}Utilisateurs Application{% endblock %}
{% block pageTitle %}Liste des Utilisateurs de l'application{% endblock %}

{% block stylesheets %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.23/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.js"></script>
    <script type="text/javascript" charset="utf8" src="{{ asset('js/dataTable.js') }}"></script>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <table id="vehiculeTable" class="table table-hover product_item_list c_table theme-color">
                        <thead>
                        <tr style="text-align: center">
                            <th>Identifiant</th>
                            <th>Pr√©nom / NOM</th>
                            <th>Adresse Mail</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in allUsers %}
                                {% set i = i+1 %}
                                <tr style="text-align: center">
                                    <td><strong>{{ user.uUsername }}</strong></td>
                                    <td><strong>{{ user.uName }}</strong></td>
                                    <td><strong><a href="mailto:{{ user.uMail }}">{{ user.uMail }}</a></strong></td>
                                    <td>
                                        <a href="#" class="btn btn-danger btn-round" style="width: 100%; font-size: 15px;">DETAIL</a>
                                    </td>
                                </tr>
                        {% endfor %}
                        </tbody>
                        <thead>
                        <tr>
                            <th colspan="9">TOTAL : {{ i }} UTILISATEURS</th>
                        </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>

    </div>
{% endblock %}