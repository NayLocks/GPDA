{% extends 'base.html.twig' %}

{% set i = 0 %}

{% block title %}Bon de Livraisons{% endblock %}
{% block pageTitle %}Liste des Bon de Livraisons{% endblock %}

{% block stylesheets %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.23/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.js"></script>
    <script type="text/javascript" charset="utf8" src="{{ asset('js/dataTable.js') }}"></script>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <table id="vehiculeTable" class="table table-hover product_item_list c_table theme-color">
                        <thead>
                        <tr style="text-align: center">
                            <th>N° PDA</th>
                            <th>N° Série</th>
                            <th>Date</th>
                            <th>Code</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for bl in allBL %}
                            {% if bl.dType == "BL" %}
                                {% set i = i+1 %}
                                <tr style="text-align: center">
                                    <td><strong>{{ bl.dNoPda.pNoPda }}</strong></td>
                                    <td><strong>{{ bl.dNoPda.pNoSerial }}</strong></td>
                                    <td><strong>{{ bl.dDate|date('d/m/Y') }}</strong></td>
                                    <td><strong>{{ bl.dType }}</strong></td>
                                    <td>
                                        <a href="http://ftp.ribegroupe.com/Appli/Gestion_PDA/Documents/BL/{{ bl.dPath }}" class="btn btn-danger btn-round" style="width: 100%; font-size: 15px;">VOIR LE BL</a>
                                    </td>
                                </tr>
                            {% endif %}
                        {% endfor %}
                        </tbody>
                        <thead>
                        <tr>
                            <th colspan="9">TOTAL : {{ i }} Bon de Livraisons</th>
                        </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>

    </div>
{% endblock %}